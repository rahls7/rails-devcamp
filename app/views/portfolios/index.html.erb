<h1>Portfolio items</h1>
<%= link_to "Create new portofilio", new_portfolio_path%>
<% @portfolio_items.each do |item| %>
    <p><%= link_to item.title, portfolio_show_path(item.id) %></p1>
    <p><%= item.subtitle%></p1>
    <p><%= item.body%></p1>
    <%= image_tag item.thumbnail unless item.thumbnail.nil? %>
    <%= link_to "Edit Item", edit_portfolio_path(item.id) %>
    <%= link_to 'Delete Portfolio Item', portfolio_path(item.id), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
